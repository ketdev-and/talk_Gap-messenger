<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        app:cardCornerRadius="@dimen/four"
        android:layout_height="150sp">


        <ImageView
            android:id="@+id/theme_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="#6A000000"
            android:scaleType="centerCrop"
            android:src="@drawable/sim" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/thirty_two"
            android:minHeight="@dimen/thirty_two"
            android:src="@drawable/singletick"
            android:layout_gravity="center"
            android:visibility="gone"
            android:padding="@dimen/four"
            android:id="@+id/selected_theme"
            android:background="@drawable/download_btn"
            app:tint="@color/coloeWhite" />

    </androidx.cardview.widget.CardView>


</LinearLayout>