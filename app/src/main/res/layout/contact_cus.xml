<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/eight"
    android:layout_marginVertical="2dp"
    app:cardElevation="0dp"
    android:background="@color/coloeWhite">
            <RelativeLayout
                android:layout_width="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/cc_rel"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/four"
                android:padding="@dimen/eight">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ContactImage"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:maxWidth="80dp"
                        android:maxHeight="80dp"
                        app:civ_border_color="@color/cardview_shadow_start_color"
                        app:civ_border_overlay="true"
                        app:civ_border_width="2dp"
                        />

                    <TextView
                        android:id="@+id/Contactusername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/sixteen"
                        android:layout_marginLeft="@dimen/sixteen"
                        android:layout_marginTop="@dimen/four"
                        android:layout_toRightOf="@id/ContactImage"
                        android:text="Sample Text"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>

                <TextView
                    android:id="@+id/ContactSub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Contactusername"
                    android:layout_marginLeft="@dimen/sixteen"
                    android:layout_marginTop="@dimen/four"
                    android:layout_toRightOf="@+id/ContactImage"
                    android:text="07057001119"
                    android:textStyle="bold|italic"
                    />

                    <Button
                        android:id="@+id/invitebtn"
                        android:layout_width="68dp"
                        android:layout_height="@dimen/thirty_two"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/top_background"
                        android:elevation="2dp"
                        android:gravity="center"
                        android:visibility="gone"
                        android:textSize="12dp"
                        android:text="Invite"
                        android:textColor="@color/coloeWhite"
                        />

                <ImageView
                    android:id="@+id/removecon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="@dimen/sixteen"
                    android:src="@drawable/remove_icon"
                    android:visibility="gone"
                    app:tint="#BF0303" />

                <ImageView
                    android:id="@+id/detailsbtncon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/removecon"
                    android:layout_toLeftOf="@id/removecon"
                   android:src="@drawable/edit"
                    android:visibility="gone"
                    app:tint="#03A9F4" />

            </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>